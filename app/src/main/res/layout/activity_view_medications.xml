<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/app_medication"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_bar_dashboard"
        android:name="com.example.healthMonitorEIM.NavBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/navigation_bar_fragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/viewMedsFrag"
        android:name="com.example.healthMonitorEIM.ViewMedicationsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        tools:layout="@layout/view_medications_fragment">
    </androidx.fragment.app.FragmentContainerView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tratamente"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:textSize="24sp" />

</RelativeLayout>
